<%= javascript_include_tag 'borrower_seeking.js', :type => "text/javascript" %>
<%  rowCount = 1 %>
<%= form_for @borrowers, :url=> {:controller=>"borrower", :action => "borrower_history"}, :html=>  {:class=>"borrower_history", :id=>"borrowers_item_form"} do |nf| %>


  <div class="top" >
    <p><span class="logo_white" >The Echo Market</span></p>
    <p>Welcome Back Echo Market borrower!</p>

  </div>

    <div style="float:left;">
      <table class="history" >
        <tr >
          <th>Category</th>
          <th>Description</th>
          <th>Model</th>
          <th>Condition</th>
          <th>Date Created/Updated</th>
          <th>Status</th>
          <th>Process</th>
        </tr>

          <% rowClass = ((rowCount%2) == 1 ? "odd" : "even" )  %>
          <%  rowCount = rowCount + 1 %>
          <tr class="<%= rowClass %>" >
            <td>
              <%= nf.fields_for :category do |cat| %>
              <%= cat.label (:category_id.blank? ? "No Item Category provided" : :category_type) %>
              <% end %>
            </td>
            <td>
              <%= nf.label (:item_description.blank? ? "NA": :item_description) %></td>
            <td>
              <%= nf.label (:item_model.blank? ? "NA": :item_model) %></td>
            <td>
              <%= nf.fields_for :item_condition do |ic| %>
              <%= ic.label (:item_condition_id.blank? ? "No Item Condition provided" : :conditions) %>
              <% end %>
            </td>
            <td>
              <%= (@borrowers.date_created.blank? ? "NA": @borrowers.date_created.strftime("%m/%d/%Y %I:%M%p")) %> <br style="margin:0;"/>
              <%= (@borrowers.date_updated.blank? ? "NA": @borrowers.date_updated.strftime("%m/%d/%Y %I:%M%p")) %>
            </td>
            <td>
               <%= (@borrowers.approved == 0 ? "Not approved": "Approved") %>
            </td>
            <td >

              <%= link_to "EDIT", :controller => "borrower", :action=> "borrower_history", :commit => "edit", :id=>@borrowers.borrower_id  %><br style="margin:0;"/><br style="margin:0;"/>
              <%= link_to "REUSE", :controller => "borrower", :action=> "borrower_history", :commit => "reuse", :id=> @borrowers.borrower_id %><br style="margin:0;"/><br style="margin:0;"/>
              <%= link_to "DELETE", {:controller => "borrower", :action => "delete_borrower_record", :commit => "delete", :id=>@borrowers.borrower_id} ,
                
                 {:confirm => "Are you sure you wish to delete this record?"}  %>


            </td>
          </tr>

      </table>
    </div>

  <% else %>
    <p>Echo Market could not find your borrower history, prehaps it has items not yet approved.</p>
  <% end %>
  <div class="div_white" ></div>
  <div class="bottom" style="text-align:center">
    <% unless @borrowers.blank? %>
		<% unless session[:community_id].blank? %>
			<%= link_to "I am not interested in either editting, reusing or deleting any of my existing item records. I'd like to create a new item record.", :controller => "borrower", :action => "community_borrower_seeking", :id=>"" %>
		<% else %>
			<%= link_to "I am not interested in either editting, reusing or deleting any of my existing item records. I'd like to create a new item record.", :controller => "borrower", :action => "borrower_seeking", :id=>"" %>
		<% end %>
      
    <% else %>
		<% unless session[:community_id].blank? %>
			<%= link_to "I'd like to offer a new item for borrowing.", :controller => "borrower", :action => "community_borrower_seeking", :id=>"" %>
		<% else %>
			<%= link_to "I'd like to offer a new item for borrowing.", :controller => "borrower", :action => "borrower_seeking", :id=>"" %>
		<% end %>
      

    <% end %>

  </div>
<% end %>




































