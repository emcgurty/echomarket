<%= javascript_include_tag 'lender_offering.js' %>

<%= form_for @lenders, :url=> {:controller=>"lender", :action => "lender_history"}, :html=> {:class=>"lender_history", :id=>"lenders_item_form"} do |nf| %>


 

 <div class="top" >
    <p><span class="logo_white" >The Echo Market</span></p>
    <p>Welcome Back Echo Market Lender!</p>

  </div>

  <% unless @lenders.blank? %>

    <div style="float:left;">
      <table class="history" >
        <tr >
          <th>Category</th>
          <th>Description</th>
          <th>Model</th>
          <th>Condition</th>
          <th>Date Created/Updated</th>
          <th>Status</th>
          <th>Process</th>
        </tr>
        <%  rowCount = 1 %>

        <% @lenders.each do |isq| %>

          <% rowClass = ((rowCount%2) == 1 ? "odd" : "even" )  %>
          <%  rowCount = rowCount + 1 %>
          <tr class="<%= rowClass %>" >
            <td>
              <% @cats = Categories.find(:first, :select=> "category_type", :readonly=>true, :conditions => ["category_id = ?", isq.item_category_id]) %>
              <%= (isq.item_category_id.blank? ? "No Item Category provided" : @cats.category_type) %>
            </td>
            <td>
              <%= (isq.item_description.blank? ? "NA": isq.item_description) %></td>
            <td>
              <%= (isq.item_model.blank? ? "NA": isq.item_model) %></td>
            <td>
              <% @cond = Itemconditions.find(:first, :select=> "conditions", :readonly=>true, :conditions => ["item_conditions_id = ?", isq.item_condition_id]) %>
              <%= (isq.item_category_id.blank? ? "No Item Condition provided" : @cond.conditions) %>
            </td>
            <td>
              <%= (isq.date_created.blank? ? "NA": isq.date_created.strftime("%m/%d/%Y %I:%M%p")) %> <br style="margin:0;"/>
              <%= (isq.date_updated.blank? ? "NA": isq.date_updated.strftime("%m/%d/%Y %I:%M%p")) %>
            </td>
            <td>
              <%= (isq.is_saved == 0 ? "Not complete": "Complete") %><br style="margin:0;"/>
              <%= (isq.approved == 0 ? "Not approved": "Approved") %>
            </td>
            <td >

              <%= link_to "Edit", :controller => "lender", :action=> "lender_history", :commit => "edit", :id=>isq.lender_item_id  %><br style="margin:0;"/>
              <%= link_to "Reuse", :controller => "lender", :action=> "lender_history", :commit => "reuse", :id=> isq.lender_item_id %><br style="margin:0;"/>
              <%= link_to ("Delete", {:controller => "lender", :action => "delete_lender_record", :commit => "delete", :id=>isq.lender_item_id} ,
                
                {:confirm => "Are you sure you wish to delete this record?"})  %>


            </td>
          </tr>
        <% end %>
      </table>
    </div>

  <% else %>
    <p>Echo Market could not find your lender history, prehaps it has items not yet approved.</p>
  <% end %>
  <div class="div_white" ></div>
  <div class="bottom" style="text-align:center">
    <% unless @lenders.blank? %>

      <%= link_to "=> I am not interested in either editting, reusing or deleting any of my existing item records. I'd like to create a new item record.", :controller => "lender", :action => "lender_offering", :id=>"" %>
    <% else %>

      <%= link_to "=> I'd like to offer a new item for lending.", :controller => "lender", :action => "lender_offering", :id=>"" %>

    <% end %>

  </div>
<% end %>