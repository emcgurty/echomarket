<%= javascript_include_tag 'echo_market.js' %>
<%= form_for @lender, :url=> {:controller=>"lender", :action => "l_list"}, :html=> {:class=>"l_list",  :id=>"l_list"} do |nf| %>
<div class="top" >
	<p>
		<span class="logo_white" >The Echo Market</span>
	</p>
	<p><%= session[:community_name].to_s unless session[:community_name].blank? %>Lender Items
	</p>
</div>

<div class="column">
	<h2 class="h2_listing" >What is offered to lend...</h2>

	<% if @lender.blank? %>
	<p>
		Seems that no one has offered to lend anything...
	</p>
	<% if session[:user_type] == 'lender' || session[:user_type] == 'both' %>
	<%= link_to "Would you like to offer something to lend?", lender_offering_url(:id => session[:user_id], :type => session[:user_type]), {:class=> "search1"}   %>
	<% else %>
	<%= link_to "Please login or register as a 'lender' to offer an item.", user_login_url(:id => '', :type => 'lender'), {:class=> "search1"}   %>
	<% end %>
	<% else %>
	

	<%= nf.fields_for :category do |cat| %>
	<%= cat.label :category_type %>
	<% end %>
	
	
	<% file_path_str = @lender.image_file_name %>
	<% icaption = (@lender.item_image_caption.blank? ? '' : @lender.item_image_caption)  %>
	<img src='<%= get_image_path(file_path_str.to_s) %>' alt="<%= icaption %>" height="42"  width="42" style="margin:5px;"/>
	<%= nf.fields_for :itemimages do |ii| %>
	<% unless icaption.blank? %>
	<%= ii.label :item_image_caption %>
	<% end %>
	<% end %>
	<label class="item_listing" >Item Description: &nbsp;<%= @lender.item_description %></label>
	<label class="item_listing">Model: &nbsp;<%= @lender.item_model %></label>
	
	<%= nf.fields_for :item_condition do |ic| %>
	<%= ic.label :condition, {class="item_listing"} %>
	<% end %>
	<%= link_to "Details..." , lender_item_detail_url(:id=> @lender.lender_id), {:style=>"color:#ff4500;"} %>

	<hr style="color:indigo;" />

	<% end %>

	
</div>

<div class="bottom">
	<% if session[:user_id] %>
	
	<% unless session[:community_id].blank? %>
		<a href="/lender/community_lender_offering" >=> Offer an Item to Lend</a>
		<a href="/borrower/community_borrower_seeking" >=> Seek an Item to Borrow</a>
	<% else %>
		<a href="/lender/lender_offering" >=> Offer an Item to Lend</a>
		<a href="/borrower/borrower_seeking" >=> Seek an Item to Borrow</a>
	<% end %>
	
	

	
	
	<% end %>
	
	
	
	<a href="/user/register" >=> Become a Echo Market Lender or Borrower Member</a>
</div>

<% end %>
