<%= javascript_include_tag 'add_item.js' %>
<%= stylesheet_link_tag 'rapid_echo_market.css' %>
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

<%= form_for @lenders, :url=> {:controller=>"lender", :action => "rapid_lender_offering", :id=> session[:rapid_id]},  :html=>   {:class=>"rapid_item", :method=> 'post'} do |nf| %>

<% unless @lenders[0].blank? %>
<% @lenders = @lenders[0] %>
<% end  %>
<%= nf.hidden_field( :is_active, :value => 1) %>
<%= nf.hidden_field( :is_saved, :value => 1) %>
<%= nf.hidden_field( :is_community, :value=> 0) %>
<%= nf.hidden_field( :item_count, :value=> 1) %>
<%= nf.hidden_field( :remote_ip, :value=> request.remote_ip) %>
<% @current_selected = '99' %>
<% @st = UsStates.find(:all, :order => "state_name") %>
<% @ct = Countries.find(:all, :order => "country_name") %>
<% @countries = options_from_collection_for_select(@ct, :country_id, :country_name, @current_selected) %>
<% @states = options_from_collection_for_select(@st, :state_id, :state_name, @current_selected) %>
<% display_state_id = 'none' %>

<div class="top" >
	<p>
		<span >Your search for what lenders have offered did not locate any records</span>
	</p>
	<%= get_search_query_string.html_safe %>
	<p>
		<span >RAPID LENDER ITEM REGISTRATION</span>
	</p>
	<a href="#" onclick="addBorrowerItem();">==> Save your Item Offered</a>
	<%= link_to '==> Return to New Search', search_item_search_url %>
	<br />
</div>

<div class="error_warning" style="display:none;float:left;width:92%;">
	<span class="error" id="incomplete_rapid_information" style="font-size:14px;"></span>
</div>

<div style="float:left;width:92%;">
	<label>Please provide an email address for borrower contact:</label>
	<br />
	<%= nf.email_field( :email_alternative, :maxlength=>50, :size=>40 ) %>
</div>

<div style="float:left;width:92%;">
	<label>Your Postal Code: </label>
	<br />
	<%= nf.text_field( :postal_code,  :maxlength=>15, :size=>15) %>
</div>

<div style="float:left;width:92%;">
	<label>Your Country: </label>
	<br />
	<%= nf.select(:country_id, @countries) %>
</div>

<div id="country_selected" style="display:none;;float:left;width:92%;">

	<label>Your State or Region: </label>
	<br />
	<div id="choose_us_state"  style="display:<%= display_state_id %>;" >
		<%= nf.select(:state_id, @states) %>
	</div>
	<% unless @lenders.state_id_string.blank? %>
	<% display_state_id_string = 'inline' %>
	<% else %>
	<% display_state_id_string = 'none' %>
	<% end %>
	<div id="provide_country_state" style="display:<%= display_state_id_string %>;" >
		<%= nf.text_field(:state_id_string, :maxlength=>40, :size=>40) %>
	</div>
</div>

<div style="float:left;width:92%;">
<label>Item Category: </label>
<br />
<% @current_selected = '99' %>
<% @categories = Categories.find(:all, :readonly => true, :order=> "category_type") %>
<% @cats = options_from_collection_for_select(@categories, :category_id, :category_type, @current_selected.to_i) %>
<%= nf.select( :item_category_id, @cats,{ :onchange=>"lenders_item_category_id();"}) %>

<div style="display:none;" id="other_category">
	<label>Add another category:</label>
	<br />
	<%= nf.text_field( :other_item_category,:maxlength=>24, :size=>24) %>
</div>
</div>

<div style="float:left;width:92%;">
	<label for="item_description">Item Description:</label>
<br />
<%= nf.text_field( :item_description, :maxlength=>50, :size=>50) %>
</div>

<div style="float:left;width:92%;">

<label>The Condition of the Item:</label>
<br />

<% @current_selected = '99' %>
<% @item_conditions = Itemconditions.find(:all, :order=> "item_conditions_id") %>
<% @bl = options_from_collection_for_select(@item_conditions, :item_conditions_id, :conditions, @current_selected) %>
<%= nf.select( :item_condition_id, @bl) %>
</div>

<div style="float:left;width:92%;">
<p >
	Echo Market is provided as a goodwill facilitating service to introduce borrowers to lenders and vice versa, seeking or offering nonperishable/ethical items.
	Once a borrower or lender has been introduced, Echo Market will play no mediating role in that event.
</p>

<label for="lenders_goodwill" style="color:#0B0B3B">&nbsp;I am acting and participating in a spirit of goodwill.&nbsp;
	<%= nf.check_box( :goodwill) %></label>

<label for="lenders_age_18_or_more" style="color:#0B0B3B">&nbsp;I have achieved the age of 18 years or more.&nbsp;
	<%= nf.check_box( :age_18_or_more) %></label>
<br/>
</div>
<div class="top">
	<p>
		Echo Market is dedicated to fostering community development through goodwill lending and borrowing
	</p>
</div>

<div class="div_white"></div>
<% end %>

