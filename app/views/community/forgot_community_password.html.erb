<%= javascript_include_tag 'login.js', :type => "text/javascript" %>
 <%= form_for @community, :url=> {:controller=>"community", :action => "forgot_community_password"}, :html=> {:class => "forgot_community_password"} do |nf| %>
<% if session[:register_type].blank? || session[:register_type]== 'all' %>
  <% @lender_type_string == "" %>
<% elsif session[:register_type] == "both" %>
  <% @lender_type_string == "LENDER/BORROWER" %>
<% else %>
  <% @lender_type_string = session[:register_type].upcase + " " %>
<% end %>
   
      <div class="top" >
        <p><span class="logo_white" >The Echo Market</span></p>
       <p><%= @lender_type_string %> FORGOT COMMUNITY PASSWORD</p>
      </div>
        <div   class="div_white" >&nbsp;</div>
     
     
     <div class="column">
        <label>Email:</label>
          
        <%= nf.email_field(:email,{:value=>"" }) %>
        <span class="error" id="forgot_community_password_email_error">This is an error</span>
      </div>
      <div class="bottom">
        <a href="#" onclick="submitForgotCommunityPassword();">=> Please retrieve my Commuity Password</a>
        <a href="#" onclick="showLogin();">=> Now I remember my Community Password</a>


      </div>

    <% end %>

   